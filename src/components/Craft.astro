---
import { translations, type Language } from '../data/translations';

interface Props {
  lang?: Language;
}

const { lang = 'id' } = Astro.props;
const t = translations[lang].craft;
---

<section class="py-40 px-8 bg-stone-900 text-stone-50">
  <div class="max-w-[1200px] mx-auto">
    <div class="text-center mb-24">
      <span class="block text-xs font-medium tracking-[0.2em] uppercase text-sky-500 mb-4">
        {t.label}
      </span>
      <h2 class="text-4xl md:text-5xl mb-2">{t.title}</h2>
      <span class="text-base italic text-stone-500 font-serif">{t.subtitle}</span>
    </div>

    <div class="grid md:grid-cols-3 gap-16 max-md:gap-12">
      {t.items.map((item, index) => (
        <div class="text-center max-md:border-t max-md:border-stone-800 max-md:pt-12 first:max-md:border-t-0 first:max-md:pt-0">
          <span class="block text-xs font-medium tracking-widest text-sky-500 mb-8">
            0{index + 1}
          </span>
          <h3 class="text-2xl mb-4">{item.title}</h3>
          <p class="text-[15px] leading-relaxed text-stone-500">{item.desc}</p>
        </div>
      ))}
    </div>
  </div>
</section>
