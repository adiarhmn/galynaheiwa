---
import { translations, type Language } from '../data/translations';

interface Props {
  lang?: Language;
}

const { lang = 'id' } = Astro.props;
const t = translations[lang].footer;

const navLinks = [
  { href: lang === 'id' ? '/koleksi' : '/en/collections', label: lang === 'id' ? 'Koleksi' : 'Collections' },
  { href: lang === 'id' ? '/cerita' : '/en/story', label: lang === 'id' ? 'Cerita Kami' : 'Our Story' },
  { href: lang === 'id' ? '/kontak' : '/en/contact', label: lang === 'id' ? 'Kontak' : 'Contact' },
];
---

<footer class="pt-24 pb-8 px-8 bg-stone-900 text-stone-50">
  <div class="max-w-[1400px] mx-auto">
    <div class="grid md:grid-cols-3 gap-16 pb-16 border-b border-stone-800">
      <div>
        <span class="font-serif text-3xl font-medium tracking-widest uppercase block mb-4">
          Galyna Heiwa
        </span>
        <p class="text-[15px] text-stone-500 max-w-[280px] leading-relaxed">
          {t.tagline}
        </p>
      </div>

      <nav class="flex flex-col gap-4">
        {navLinks.map((link) => (
          <a 
            href={link.href} 
            class="text-sm text-stone-50 transition-colors duration-300 hover:text-sky-500"
          >
            {link.label}
          </a>
        ))}
      </nav>

      <div class="flex flex-col gap-4 md:text-right">
        <a 
          href="https://instagram.com" 
          target="_blank" 
          rel="noopener" 
          class="text-sm text-stone-500 transition-colors duration-300 hover:text-stone-50"
        >
          {t.instagram}
        </a>
        <a 
          href="mailto:hello@galynaheiwa.com" 
          class="text-sm text-stone-500 transition-colors duration-300 hover:text-stone-50"
        >
          {t.email}
        </a>
      </div>
    </div>

    <div class="flex justify-between items-center pt-8 max-md:flex-col max-md:gap-4 max-md:text-center">
      <span class="text-xs text-stone-600">
        &copy; {new Date().getFullYear()} Galyna Heiwa. {t.rights}
      </span>
      <div class="flex gap-2 text-xs">
        <a 
          href="/" 
          class:list={[
            'text-stone-600 transition-colors duration-300',
            lang === 'id' ? 'text-stone-50' : 'hover:text-stone-50'
          ]}
        >
          ID
        </a>
        <span class="text-stone-600">/</span>
        <a 
          href="/en" 
          class:list={[
            'text-stone-600 transition-colors duration-300',
            lang === 'en' ? 'text-stone-50' : 'hover:text-stone-50'
          ]}
        >
          EN
        </a>
      </div>
    </div>
  </div>
</footer>
